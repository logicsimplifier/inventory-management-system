<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="732.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventoryapp.controller.DashboardController">

    <!-- Title -->
    <Label layoutX="34.0" layoutY="22.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Staff Dashboard" />
    <Label layoutX="280" layoutY="220" style="-fx-font-size: 14px; -fx-text-fill: #666;" text="(Read-Only Access)" />

    <!-- Logout Button -->
    <Button fx:id="logoutButton" layoutX="750" layoutY="30" onAction="#handleLogout" 
            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;" 
            text="Logout" />

    <!-- Inventory Table -->
    <TableView fx:id="inventoryTable" layoutX="34.0" layoutY="80.0" prefHeight="400.0" prefWidth="820.0">
        <columns>
            <TableColumn fx:id="itemNameCol" text="Item Name" prefWidth="200.0" />
            <TableColumn fx:id="quantityCol" text="Quantity" prefWidth="100.0" />
            <TableColumn fx:id="categoryCol" text="Category" prefWidth="150.0" />
            <TableColumn fx:id="lastUpdatedCol" text="Last Updated" prefWidth="150.0" />
        </columns>
    </TableView>

    <!-- Low Stock Section -->
    <Label layoutX="34.0" layoutY="500.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Low Stock Items:" />
    <ListView fx:id="lowStockList" layoutX="34.0" layoutY="530.0" prefHeight="150.0" prefWidth="820.0" />

</AnchorPane>
