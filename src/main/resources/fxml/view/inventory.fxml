<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventoryapp.controller.InventoryController">
   <top>
      <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="35.0" prefWidth="822.0" text="Inventory Management System">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Separator />
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <HBox prefHeight="555.0" prefWidth="883.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <!-- Form Panel -->
            <VBox prefWidth="350.0" spacing="15.0">
               <children>
                  <Label text="Item Details">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <!-- Name Field -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Name:">
                           <font>
                              <Font size="14.0" />
                           </font></Label>
                        <TextField fx:id="nameField" promptText="Enter item name" />
                     </children>
                  </VBox>
                  
                  <!-- Description Field -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Description:">
                           <font>
                              <Font size="14.0" />
                           </font></Label>
                        <TextArea fx:id="descriptionArea" prefRowCount="3" promptText="Enter item description" wrapText="true" />
                     </children>
                  </VBox>
                  
                  <!-- Category Field -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Category:">
                           <font>
                              <Font size="14.0" />
                           </font></Label>
                        <ComboBox fx:id="categoryCombo" prefWidth="150.0" promptText="Select category" />
                     </children>
                  </VBox>
                  
                  <!-- Quantity Field -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Quantity:">
                           <font>
                              <Font size="14.0" />
                           </font></Label>
                        <TextField fx:id="quantityField" promptText="Enter quantity" />
                     </children>
                  </VBox>
                  
                  <!-- Price Field -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Price:">
                           <font>
                              <Font size="14.0" />
                           </font></Label>
                        <TextField fx:id="priceField" promptText="Enter price" />
                     </children>
                  </VBox>
                  
                  <!-- Supplier Field -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Supplier:">
                           <font>
                              <Font size="14.0" />
                           </font></Label>
                        <TextField fx:id="supplierField" promptText="Enter supplier name" />
                     </children>
                  </VBox>
                  
                  <!-- Action Buttons -->
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="addButton" prefWidth="70.0" text="Add" />
                        <Button fx:id="updateButton" prefWidth="70.0" text="Update" />
                        <Button fx:id="deleteButton" prefWidth="70.0" text="Delete" />
                        <Button fx:id="clearButton" prefWidth="70.0" text="Clear" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            
            <!-- Table Panel -->
            <VBox prefWidth="600.0" spacing="10.0">
               <children>
                  <Label text="Inventory Items">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  
                  <!-- Search Section -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="Search:">
                           <font>
                              <Font size="14.0" />
                           </font></Label>
                        <TextField fx:id="searchField" prefWidth="200.0" promptText="Search by name..." />
                        <Button fx:id="searchButton" text="Search" />
                     </children>
                  </HBox>
                  
                  <!-- Items Table -->
                  <TableView fx:id="itemsTable" prefHeight="400.0">
                     <columns>
                        <TableColumn fx:id="idColumn" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name" />
                        <TableColumn fx:id="categoryColumn" prefWidth="100.0" text="Category" />
                        <TableColumn fx:id="quantityColumn" prefWidth="80.0" text="Quantity" />
                        <TableColumn fx:id="priceColumn" prefWidth="80.0" text="Price" />
                        <TableColumn fx:id="supplierColumn" prefWidth="130.0" text="Supplier" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </center>
   <bottom>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Separator />
            <Label fx:id="statusLabel" text="Ready">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </VBox>
   </bottom>
</BorderPane>
