<!-- Backend with Link: com.inventoryapp.controller.LoginController -->
<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="732.0" prefWidth="900.0" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventoryapp.controller.LoginController">

    <!-- Centered Login Form -->
           <VBox alignment="CENTER" prefHeight="538.0" prefWidth="500.0" spacing="30" style="-fx-padding: 50;">
                <!-- Logo Image -->
                <ImageView fitHeight="75.0" fitWidth="91.0" pickOnBounds="true" preserveRatio="true">
                   <image>
                       <Image url="@../../images/logo.png" />
                   </image>
                    <VBox.margin>
                        <Insets bottom="-17.0" />
                    </VBox.margin>                   
                </ImageView>
               
                <!-- Title -->
                <Label style="-fx-text-fill: #2a2a72; -fx-font-size: 24px; -fx-font-weight: bold;" text="Sign In" />
               
                <VBox alignment="CENTER" spacing="15" style="-fx-padding: 0 30;">

                   <!-- Username Field -->
                   <VBox spacing="5">
                       <Label style="-fx-text-fill: #555; -fx-font-size: 13px; -fx-font-weight: bold;" text="Username" />
                       <TextField fx:id="usernameField" promptText="Enter your username" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 10; -fx-font-size: 14px; -fx-prompt-text-fill: #aaa;">
                           <effect>
                               <InnerShadow color="rgba(0,0,0,0.1)" radius="3" />
                           </effect>
                       </TextField>
                    </VBox>
                   
                    <!-- Password Field -->
                   <VBox spacing="5">
                       <Label style="-fx-text-fill: #555; -fx-font-size: 13px; -fx-font-weight: bold;" text="Password" />
                       <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 10; -fx-font-size: 14px; -fx-prompt-text-fill: #aaa;">
                           <effect>
                               <InnerShadow color="rgba(0,0,0,0.1)" radius="3" />
                           </effect>
                       </PasswordField>
                   </VBox>
                   
                    <!-- Role Selection -->
                   <VBox spacing="5">
                       <Label style="-fx-text-fill: #555; -fx-font-size: 13px; -fx-font-weight: bold;" text="Role" />
                       <ComboBox fx:id="roleComboBox" prefWidth="200.0" promptText="Select your role" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 8; -fx-font-size: 14px;">
                           <effect>
                               <InnerShadow color="rgba(0,0,0,0.1)" radius="3" />
                           </effect>
                       </ComboBox>
                   </VBox>
                   
                    <!-- Remember Me & Forgot Password -->
                   <HBox alignment="CENTER_LEFT" spacing="20">
                       <CheckBox style="-fx-text-fill: #555; -fx-font-size: 13px;" text="Remember me" />
                       <Button style="-fx-background-color: transparent; -fx-text-fill: #2a2a72; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 0; -fx-cursor: hand;" styleClass="forgot-password-btn" text="Forgot Password?" />
                   </HBox>
                   
                    <!-- Login Button -->
                   <Button alignment="CENTER" contentDisplay="CENTER" onAction="#handleLogin" prefHeight="44.0" prefWidth="373.0" style="-fx-background-color: #2a2a72; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 12 0; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.5, 0, 1);" styleClass="login-btn" text="LOGIN" textAlignment="CENTER" />
                   
                    <!-- Divider -->
                   <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10 0;">
                       <Line endX="100" style="-fx-stroke: #e0e0e0;" />
                       <Label style="-fx-text-fill: #aaa; -fx-font-size: 12px; -fx-padding: 0 10;" text="OR" />
                       <Line endX="100" style="-fx-stroke: #e0e0e0;" />
                   </HBox>
                   
                </VBox>
               
                    <!-- Sign Up Link -->
                    <HBox alignment="CENTER" spacing="5">
                        <Label style="-fx-text-fill: #555; -fx-font-size: 13px;" text="Don't have an account?" />
                        <Button style="-fx-background-color: transparent; -fx-text-fill: #2a2a72; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 0; -fx-cursor: hand;" styleClass="signup-btn" text="Sign Up" />
                    </HBox>
               
                    <!-- Status Label for login messages -->
                    <Label fx:id="loginStatusLabel" style="-fx-text-fill: #d32f2f; -fx-font-size: 13px;" />

           </VBox>

</StackPane>
